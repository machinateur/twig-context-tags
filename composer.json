{
  "type": "library",
  "name": "machinateur/twig-context-tags",
  "description": "A twig extension to enable the use of context tags in templates.",
  "keywords": ["twig", "extension", "php", "context-tag"],
  "homepage": "https://github.com/machinateur/twig-context-tags",
  "license": "MIT",
  "authors": [
    {
      "name": "machinateur",
      "email": "hello@machinateur.dev",
      "homepage": "https://machinateur.dev/"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "require": {
    "php": ">=8.1.0",
    "twig/twig": "^3.15"
  },
  "autoload": {
    "psr-4": {
      "Machinateur\\Twig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Machinateur\\Twig\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml.dist"
  }
}
